<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
  <%= form.label :email, "Email", class: "block text-gray-700 font-semibold mb-2" %>
  <%= form.text_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
</div>

<div class="mb-4">
  <%= form.label :password, "Password", class: "block text-gray-700 font-semibold mb-2" %>
  <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
</div>

<div class="mb-4">
  <%= form.label :password_confirmation, "Confirm Password", class: "block text-gray-700 font-semibold mb-2" %>
  <%= form.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
</div>

<div>
  <%= form.submit "Sign Up", class: "w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
</div>

<% end %>
