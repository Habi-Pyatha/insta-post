<% if alert %>
  <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
    <span class="font-medium"><%= alert %></span>
  </div>
<% end %>

<h4 class="text-2xl font-bold mb-6 text-center">Login</h4>
<%= form_tag sessions_path do |form| %>
  <div class="mb-4">
    <%= label_tag :email, "Email", class: 'block text-gray-700 font-semibold mb-2' %>
    <%= text_field_tag :email, nil, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
  </div>
  <div class="mb-6">
    <%= label_tag :password, "Password", class: 'block text-gray-700 font-semibold mb-2' %>
    <%= password_field_tag :password, nil, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent' %>
  </div>
  <div>
    <%= submit_tag "Login", class: 'w-full bg-blue-600 text-white font-semibold py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500' %>
  </div>
<% end %>